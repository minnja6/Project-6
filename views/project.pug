extends layout.pug

block content 
  nav.grid-container.portfolio-breadcrumb
    a(href='/') ‚Üê Back
  article.grid-container.portfolio-intro.portfolio-project
    .grid-x
      .cell.small-6.medium-9.large-9

        //- Using interploation to dynamically add the project title.
        h1= project.project_name

        //- Using interploation to dynamically add the project description.
        p.lead.text-light
          | #{project.description}

      .cell.portfolio-meta.small-6.medium-2.large-3
        h6 Technologies

        //- Using the `each` iterator to replace the li tags below and interploation to dynamically add the technologies used in each project.
        ul
          each technology in project.technologies
            li= technology

          

        //- Using template literals and interpolation to add URLs to the hrefs below so they link to the repo and the live version of each project.
        a.button.expanded(href=`${project.live_link}` target="_blank") Live Demo
        a.button.expanded(href=`${project.github_link}` target="_blank") GitHub Repo
    
    //- Template literals and interpolation to dynamically add project images 
    each image in project.image_urls
      img.image(src=image)
      
      