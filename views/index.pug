extends layout.pug

block content 
  article.grid-container.portfolio-intro
    div

      //- Adding a title 
      h1 Welcome To My Portfolio!

      //- Adding a description for my portfolio
      p.lead.text-light
        | A fullstack JavaScript Developer in the making looking to expand my knowledge and learn as much as possible.
  article.grid-container.portfolio-index
    
    .grid-x.grid-margin-x.small-up-2.medium-up-2.large-up-3

      each project in projects
        .cell
          a(href=`/projects/${project.id}`)
            img.thumbnail(src=`${project.small_image}`)
            h5= project.project_name
